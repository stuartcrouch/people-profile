function ou_profile_oucu_action($node, $context = array()) {

  ou_profile_log("node->type = " . $node->type . " | nid = " . $node->nid);
  $oucu = NULL;

  if ($node->type == 'profile') {  // oucu is unset so we need to go and get it from the content type data set.
